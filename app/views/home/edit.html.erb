<div>
  <%= form_for @user, url: "/home/update/#{@user.id}", method: :post do |f| %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <%= f.submit '決定' %>
  <% end %>
</div>
<p><%= link_to 'プロフィール', "/" %></p>