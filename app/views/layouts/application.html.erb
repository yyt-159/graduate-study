<!DOCTYPE html>
<html>
  <head>
    <title>GraduateStudy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# <%= stylesheet_pack_tag 'application', media: 'all'%>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_pack_tag 'application' %> 
    <%# bootstrap用 %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no">

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.1/mdb.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-light">

    <!-- ▼ deviseのrequirement -->

    <!-- ▲ deviseのrequirement -->
    <% if user_signed_in? %>
    <header class="fixed-top py-3 bg-white border-bottom">
      <ul class="nav d-flex justify-content-between px-3">
        <% if @back_sign %>
          <li class="nav-item"><%=link_to "←", @back_url %></li>
        <% else %>
        <%=link_to "/" do%>
          <li class="nav-item">
            <div style="top:.66rem;width:2.5rem;height:2.5rem;background-color: #1266f1;" class="rounded-circle position-absolute">
            <p style="margin-bottom:0; top:.57rem;color:white;" class="position-relative text-center"><%=current_user.username[0]%></p>
            </div>
          </li>
        <% end %>
        <% end %>
        <li class="nav-item">team:<%= current_user.team.id %></li>
      </ul>
    </header>
    <% end %>
    <div class="container my-5 py-4">
      <% if notice %>
        <p class="notice alert alert-primary"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-warning"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>

    <footer class="fixed-bottom border-top py-3 bg-white">
     <ul class="nav d-flex justify-content-around">
     <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to 'チーム', "/team/#{current_user.team_id}/index" %>
      </li>
      <li class="nav-item">
        
      </li>
      <li class="nav-item">
        <%= link_to 'タスク一覧', tasks_url %>
      </li>
  
      <% end %>
     </ul>
     <%= link_to new_task_url do %>
        <div style="top:-4.3rem;right:1.5rem;width:3.2rem;height:3.2rem;background-color: #1266f1;" class="rounded-circle position-absolute">
        <p style="margin-bottom:0; top:.9rem;color:white;" class="position-relative text-center">
          ＋
        </p>
        </div>
        <% end %>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!-- MDB -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.1/mdb.min.js"
    ></script>
  </body>
</html>
