<h1>SubTasks#edit</h1>
<p>Find me in app/views/sub_tasks/edit.html.erb</p>
<div style="width: 300px;">
<%# resoucesでsub_taskをネストしたため、特殊な表記になる %>
  <%= form_for @sub_task, url: task_sub_task_path(params[:task_id],params[:id])  do |f| %>
  <div>
    <%= f.label :タスク名 %>
    <%= f.text_field :title, size: 50 %>
  </div>
  <div>
    <%= f.label :説明 %>
    <%= f.text_area :description %>
  </div>
    <div>
    <%= f.label :期日%>
    <%= f.date_field :target_at %>
  </div>
  <div>
    <%= f.label :公開する%>
    <%= f.check_box :public_sub_task,{}, "true", "false" %>
  </div>
    <%= f.submit 'Submit' %>
  <% end %>
</div>
<p><%= link_to '一覧に戻る', tasks_url %></p>