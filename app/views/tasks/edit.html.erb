<div class="bg-white border rounded-5">
  <div class="w-100 p-4 pb-4">
    <h2 class="text-center">EDIT TASK</h2>
    <%= form_for(@task) do |f| %>
    <%# エラーメッセージの表示 %>
    <% if @task.errors.any? %>
      <%= @task.errors.count %>件のエラー
      <% @task.errors.full_messages.each do |message| %>
        <%= message %> 
      <% end %>
    <% end %>
    <div class="form-group mb-2">
      <%= f.label :title ,for:"exampleInputEmail1" %>
      <%= f.text_field :title, id:"exampleInputEmail1" ,class:"form-control" %>
    </div>
    <div class="form-group mb-2">
      <%= f.label :description ,class:"form-label" ,for:"exampleInputEmail1"%>
      <%= f.text_area :description , id:"form1Example1" ,class:"form-control"%>
    </div>
      <div class="form-group mb-2">
      <%= f.label :date%>
      <%= f.date_field :target_at %>
    </div>
    <div>
      <%= f.label :public,class:"form-check-label mb-2",for:"exampleCheck1"%>
      <%= f.check_box :public_task,{}, "true", "false"%>
    </div>
      <%= f.submit 'EDIT' ,class:"btn btn-primary btn-block"%>
    <% end %>
  </div>
</div>