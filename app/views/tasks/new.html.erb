<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>

<div style="width: 300px;">
  <%= form_for(@task) do |f| %>
  <%# エラーメッセージの表示 %>
  <% if @task.errors.any? %>
    <%= @task.errors.count %>件のエラー
    <% @task.errors.full_messages.each do |message| %>
      <%= message %> 
    <% end %>
  <% end %>
  <div>
    <%= f.label :タスク名 %>
    <%= f.text_field :title, size: 50 %>
  </div>
  <div>
    <%= f.label :説明 %>
    <%= f.text_area :description %>
  </div>
    <div>
    <%= f.label :期日%>
    <%= f.date_field :target_at %>
  </div>
  <div>
    <%= f.label :公開する%>
    <%= f.check_box :public_task,{}, "true", "false" %>
  </div>
    <%= f.submit 'Submit' %>
  <% end %>
</div>
<p><%= link_to '一覧に戻る', tasks_url %></p>